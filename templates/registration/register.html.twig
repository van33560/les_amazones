{% extends 'base.html.twig' %}
{% block main %}
{% block title %}Register{% endblock %}
{% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}
<div class="row position relative">
    <div class="position absolute">
        <img src="{{ asset('assets/img/sport-rose.jpg') }}" alt="" class="img-fluid" id="sport-rose">
    </div>
</div>


  {{ form_start(registrationForm) }}
    <div class="form-insert-register">
        <div class="form-group col-10 col-lg-6 ml-5 mt-5">
            <h1 class="form-group">Inscription</h1>
              <div class="form-group col-md-2">
                    {{ form_row(registrationForm.firstname) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_row(registrationForm.name) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_row(registrationForm.age) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_row(registrationForm.email) }}
                </div>

                <div class="form-group col-md-2">
                    {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                </div>

                <div class="form-group col-md-2">
                    {{ form_row(registrationForm.user_picture) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>
                <div class="form-group col-md-2">
                    {{ form_row(registrationForm.valider) }}
                </div>
        </div>
    </div>
  {{ form_end(registrationForm) }}


{% endblock %}








