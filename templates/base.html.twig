{% block head %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Site pour les femmes qui ont eu un cancer du sein">
    <meta name="author" content="vanessa">
    <meta name="keywords" content="cancer,sein,maladie,accessoires">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Chango&family=Concert+One&family=Francois+One&family=Fredoka+One&family=Pragati+Narrow&family=Prata&family=Ramabhadra&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Philosopher&display=swap" rel="stylesheet1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@1.0.0/dist/css/axentix.min.css">
    <link rel="stylesheet" media="screen and (max-width: 540px)" href="smallscreen.css" type="text/css" />
    <link rel="stylesheet" href="{% block stylesheet %}{{ asset('assets/css/base.css') }}{% endblock stylesheet %}">

    <title>{% block title %}Les amazones{% endblock %}</title>
</head>
{% endblock head %}
<body>
{% block header%}
<header class="haut">
        <nav class="positionrelative">
            <ul>
                <li class=""><a href="{{path('home_page')}}">Actualités &ensp;</a>
                    <ul class="soubmenu">
                        <li class=""><a href="{{path('contact')}}">Contact</a></li>
                        <li class=""><a href="{{path('apropos')}}">Apropos</a></li>
                    </ul>
                </li>
                <li class=""><a href="{{path('Front_articlelist')}}">Articles &ensp;</a>
                    <ul class="submenu">
                        <li class=""><a href="">Annuaire</a></li>
                    </ul>
                </li>
                <li class=""><a href="{{path('Front_categorylist')}}">Catégories&ensp;</a>
                    <ul class="soumenu">
                        <li class=""><a href="{{path('Front_testimony_list')}}">Témoignages</a></li>

                    </ul>
                </li>
            </ul>

            <form class=" position-absolute search-form-articles" action="{{path('search_articles')}}">
                <label>
                    <input type="text" name="search" placeholder="Recherche" class="input-search">
                </label>
                <button type="submit" class="btn">Valider</button>
            </form>

        </nav>

    {# animation js du titre #}
    <a href="{{path('home_page')}}" class="position-absolute ml2">Les Amazones</a>

        <div class="position-absolute don">
           <a href="https://www.monreseau-cancerdusein.com/?gclid=EAIaIQobChMI59bCo_rN7gIVjNrVCh1hTQxTEAAYASAAEgIv_fD_BwE" class="faireD">Faire un Don</a>
        </div>

        {% if is_granted('ROLE_ADMIN')%}
            <div class="col-lg-2 position-absolute" id="google">
                <a href="{{path('admin_page')}}"><img src="{{ asset('assets/img/settings.svg') }}" alt="" class="img-fluid"></a>
            </div>
        {% endif %}
    <div class="accroche">
    </div>

</header>

{% endblock header %}
{# dans une boucle for j'appel si success le message add flash que j'ai defini dans une des functions de
mon controller articles#}
{# si mon article est supprimé mon message s'affichera grace à la variable globale app sur la page principale#}
    {%  for message in app.flashes ('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor%}
{% block main %}{% endblock main %}
    {# retour vers le haut #}

{% block footer %}
    <footer class="container-fluid position-relative" id="footer">

        <div class="liens position-absolute">
            <a class=""href="{{path('mentionlegales')}}">Mentions légales||©Labat</a>
        </div>

        <div class="position-absolute redirection" id="facebook">
            <a href="https://fr-fr.facebook.com/" target="_blank"><img src="{{ asset('assets/img/facebook.svg') }}" alt=""></a>
        </div>
        <div class="position-absolute redirection" id="twitter">
            <a href="https://mobile.twitter.com/?lang=fr" target="_blank"><img src="{{ asset('assets/img/twitter.svg') }}" alt=""></a>
        </div>
        <div class="position-absolute redirection" id="instagram">
            <a href="https://www.instagram.com/?hl=fr" target="_blank"><img src="{{ asset('assets/img/instagram.svg') }}" alt=""></a>
        </div>


    </footer>
{% endblock footer %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
<script src="{{ asset('assets/js/main.js') }}"></script>
{% endblock javascripts %}
</body>
</html>