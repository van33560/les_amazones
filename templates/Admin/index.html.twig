
{% extends 'base2.html.twig' %}

{% block main %}

{# grace à la proprieté path,je crée des liens qui renvoient vers les names de des functions
que j'ai defini dans mes controllers admincategory et admintestimony #}
    <h1 class="titre">Les Articles</h1>
           <div id="example-sidenav" data-ax="sidenav" class="sidenav shadow-1 large fixed white">
                <div class="sidenav-header">
                    <button data-target="example-sidenav" class="sidenav-trigger"><i class="fas fa-times"></i></button>
                    <img class="sidenav-logo dropshadow-1" src="{{ asset('assets/img/girl.svg') }}" alt="Logo" id="ad-compte" />
                </div>
                <h3 class="Compte_admin">Compte administrateur</h3>

                <a href="{{ path("home_category") }}" class="sidenav-link active" id="gerer-catagories">Gérer les catégories</a>
               <a href="{{ path("home_testimony") }}" class="sidenav-link active" id="Gérer les témoignages">Gérer les témoignages</a>
            </div>
<table id="customers">
{# j'appel dans ce tableau un articles dans mes articles et j'affiche son id et son titre #}
{% for article in articles %}
    <tbody>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
            <tr>
                    <td>{{article.id}}</td>
                    <td>{{article.title}}</td>
                <td class="text-center">
                    {# la methode path me permet de rappeler une function deja defini avec son id dans mon controller via son name
                             pour pouvoir supprimer ou modifier un article #}
                    <div><a href="{{ path('admin_article_insert') }}" id ="couleur-compte">Créer</a></div>
                    <div><a href="{{ path('admin_article_update', {'id':article.id}) }}" id="couleur-compte">Modifier</a></div>
                    <div><a href="{{ path('admin_article_delete', {'id':article.id}) }}" id="couleur-compte">Supprimer</a></div>


                </td>
            </tr>
    </tbody>

{% endfor %}

</table>
{% endblock %}
