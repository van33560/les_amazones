{% extends 'base2.html.twig' %}

{% block main %}
    <h1 class="titre">Les Catégories</h1>

    <a href="{{ path("admin_page") }}"class="gerer-articles">Gérer les articles</a>
    <a href="{{ path("home_testimony") }}" class="gerer-les-témoignages">Gérer les témoignages</a>

    <div id="example-sidenav" data-ax="sidenav" class="sidenav shadow-1 large fixed white">
        <div class="sidenav-header">
            <button data-target="example-sidenav" class="sidenav-trigger"><i class="fas fa-times"></i></button>
            <img class="sidenav-logo dropshadow-1" src="{{ asset('assets/img/girl.svg') }}" alt="Logo" id="ad-compte" />
        </div>
        <h3 class="Compte_admin">Compte administrateur</h3>
        <a href="{{ path("admin_page") }}"class="sidenav-link active" >Gérer les articles</a>
        <a href="{{ path("home_testimony") }}" class="sidenav-link active" >Gérer les témoignages</a>
    </div>
 {# grace à la proprieté path,je crée des liens qui renvoient vers les names de des functions
que j'ai defini dans mes controllers admincarticles et admintestimony #}
    <table id="customers">
        {# j'appel dans ce tableau une category dans mes category et j'affiche son id et son titre #}
          {% for category in categorys %}
        <tbody>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th class="text-center">Actions</th>
            </tr>
        <tbody>
            <tr>
                <td>{{category.id}}</td>
                <td>{{category.title}}</td>
                <td class="text-center">
                    {# la methode path me permet de rappeler une function deja defini avec son id dans mon controller via son name
                     pour pouvoir supprimer ou modifier un article #}
                    <div><a href="{{ path('admin_category_insert')}}" id="couleur-inscription">Créer</a></div>
                    <div><a href="{{ path('admin_category_update', {'id': category.id}) }}" id="couleur-inscription">Modifier</a></div>
                    <div><a href="{{ path('admin_category_delete', {'id': category.id}) }}" id="couleur-inscription">Supprimer</a></div>
                </td>
            </tr>
          {% endfor %}
    </table>

{% endblock main%}
