{% extends 'base.html.twig' %}

{% block title %}Connectez-vous{% endblock title%}

{% block main %}

<form method="post"id="connect">
    <div class="form-group col-6 col-md-4 col-lg-3-ml-5">

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                 {{ app.user.username }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
            </div>
        {% endif %}
            <li class="connexion">Connexion<a href="{{ path('app_register') }}">/Inscription</a></li>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus><br>
            <label for="inputPassword mt-3">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class=" mb-5 mt-5 btn btn-lg btn-primary" type="submit">Valider</button>
     </div>
</form>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

{% endblock main%}
